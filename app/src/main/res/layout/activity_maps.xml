        android:hint="@string/hint_from"
        map:layout_constraintTop_toBottomOf="@id/from"
        map:layout_constraintStart_toStartOf="parent"/>
-->
    <Button
        android:id="@+id/wmaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/basic_marging"
        android:enabled="false"
        android:textSize="@dimen/text_size_2"
        android:text="@string/to_waze_maps_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/gmaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/basic_marging"
        android:enabled="false"
        android:textSize="@dimen/text_size_2"
        android:text="@string/to_google_maps_button"
        app:layout_constraintBottom_toTopOf="@+id/wmaps"
        app:layout_constraintStart_toStartOf="parent"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/basic_marging"
        app:layout_constraintTop_toBottomOf="@id/to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gmaps"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateOnly="true"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>